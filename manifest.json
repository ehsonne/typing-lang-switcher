{
    "manifest_version": 3,
    "name": "Typing Lang Switcher",
    "version": "1.0",
    "description": "Switch between English and Persian keyboards while typing with a shortcut.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "48": "icon.png"
      }
    },
    "permissions": ["activeTab"],
    "icons": {
      "48": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["contentScript.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  